<Window x:Class="iMargin.NewCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewCategory" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="269" VerticalAlignment="Top" Width="292">
            <Label Content="New Category" HorizontalAlignment="Center"/>
            <StackPanel Height="181">
                <Label Content="Enter Category Name:" Margin="0, 30, 0, 0" HorizontalAlignment="Center"/>
                <TextBox Height="23" Width="110" TextWrapping="Wrap" Name="NewCatName" HorizontalAlignment="Center"/>
            </StackPanel>
            <Button Content="Save" HorizontalAlignment="Center" Click="Save_New_Category"/>
        </StackPanel>

    </Grid>
</Window>
